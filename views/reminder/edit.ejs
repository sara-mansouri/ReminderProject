<div class="container">
  <h1 class="page-header">Edit</h1>
  <form action=<%= "/reminder/update/" + reminderItem.id %> method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control" id="titleInput" value="<%= reminderItem.title %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description"><%= reminderItem.description %></textarea>
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" name="location" class="form-control" id="locationInput" value="<%= reminderItem.location %>">
    </div>
    <div class="form-group">
      <label for="location">Date</label>
      <input type="datetime-local" name="date" class="form-control" id="dateInput" value="<%= reminderItem.date %>">
    </div>
    <div class="form-group">
      <label for="tags">Tags(comma separated)</label>
      <textarea class="form-control" id="tagsInput" rows="3" placeholder="tag1,tag2" name="tags"><%= reminderItem.tags %></textarea>
    </div>
    <div class="form-group">
      <label for="tasks">Tasks (*one task per line)</label>
      <textarea class="form-control" id="tasksInput" rows="3" placeholder="task1" name="tasks"><%= reminderItem.tasks %></textarea>
    </div>

    <div class="form-group">
      <label for="completed">Completed</label>
      <div class="radio">
        <label>
          <% if (reminderItem.completed == true) { %>
            <input type="radio" name="completed" id="true" value="<%= reminderItem.completed %>" checked="checked">
          <% } else { %>
            <input type="radio" name="completed" id="true" value="<%= reminderItem.completed %>" >
          <% } %>
          True
        </label>
      </div>
      <div class="radio">
        <label>
         
          <% if (reminderItem.completed == false) { %>
            <input type="radio" name="completed" id="false" value="<%= reminderItem.completed %>" checked="checked">
          <% } else { %>
            <input type="radio" name="completed" id="false" value="<%= reminderItem.completed %>">
          <% } %>
          False
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
